<div class="row">
  <div class="col-md-12">
    <div class="col-md-3">
      <h4> Start Address</h4>
    </div>
    <div class="col-md-3">
      <h4>Destination Address</h4>
    </div>
    <div class="col-md-2">
      <h4>Distance</h4>
    </div>
    <div class="col-md-2">
      <h4>Cost</h4>
    </div>
    <div class="col-md-2">
      <h4>Transport</h4>
    </div>
    <% if @trips.any? %>
      <%= render @trips %>
    <% else %>
      <div class="col-md-5">
        <h5>There are no trips saved yet</h5>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= link_to "Add trip", new_trip_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-1">
      <%= link_to "Show report", daily_reports_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
